<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval" >
            <gradient
                android:angle="0"
                android:centerColor="#2bd1f8"
                android:centerX="28%"
                android:endColor="#a854d4"
                android:startColor="#439ce7"
                android:type="linear" />
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <item
        android:bottom="55dp"
        android:left="55dp"
        android:right="55dp"
        android:top="55dp">
        <shape android:shape="oval" >
            <solid android:color="#FFFFFF" />
            <corners android:radius="16dp"/>
        </shape>
    </item>
</layer-list>